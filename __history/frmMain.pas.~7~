unit frmMain;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, ComCtrls, ExtCtrls, StdCtrls, pngimage, DB, ADODB;

type
  TForm1 = class(TForm)
    sideMenu: TTreeView;
    mainBody: TPanel;
    header: TPanel;
    Panel1: TPanel;
    Label1: TLabel;
    Edit1: TEdit;
    ListView1: TListView;
    Panel2: TPanel;
    Button3: TButton;
    Button2: TButton;
    Button1: TButton;
    procedure FormCreate(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
    procedure createList();
  end;

var
  Form1: TForm1;

implementation

uses module;

{$R *.dfm}

procedure TForm1.createList();
var
  listItem: TListItem;

begin

  // Limpa o Conteudo Existente no ListView
  ListView1.Clear;

  // Posicionamos no Primeiro Registro
  Dm.sqlCidades.Active;

  while not Dm.sqlCidades.Eof do
  begin

    // Adicionamos um Item ao ListView
    ListItem := ListView1.Items.Add;

    // Adicionamos dados a Coluna Login
    ListItem.Caption := Dm.sqlCidades.FieldByName('codigo_cidade').Value;

    // Adicionamos a Coluna Nome do Usuario
    ListItem.SubItems.Add(Dm.sqlCidades.FieldByName('codigo_cidade').Value);

    // Adicionamos a coluna Nivel
    ListItem.SubItems.Add(Dm.sqlCidades.FieldByName('codigo_cidade').Value);

    // Adicionamos a coluna Nivel
    ListItem.SubItems.Add(Dm.sqlCidades.FieldByName('codigo_cidade').Value);

    // Adicionamos a coluna Nivel
    ListItem.SubItems.Add(Dm.sqlCidades.FieldByName('codigo_cidade').Value);

    // Mudamos para o proximo registro
    Dm.sqlCidades.Next;

  end;

end;

procedure TForm1.FormCreate(Sender: TObject);
begin

  createList();

end;

end.
