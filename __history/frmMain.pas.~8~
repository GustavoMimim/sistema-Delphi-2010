unit frmMain;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, ComCtrls, ExtCtrls, StdCtrls, pngimage, DB, ADODB;

type
  TForm1 = class(TForm)
    sideMenu: TTreeView;
    mainBody: TPanel;
    header: TPanel;
    Panel1: TPanel;
    Label1: TLabel;
    Edit1: TEdit;
    lvRecords: TListView;
    Panel2: TPanel;
    Button3: TButton;
    Button2: TButton;
    Button1: TButton;
    sqlCidades: TADOQuery;
    sqlCidadescodigo_cidade: TStringField;
    sqlCidadesnome: TStringField;
    sqlCidadesestado: TStringField;
    sqlCidadescep_inicial: TStringField;
    sqlCidadescep_final: TStringField;
    ADOConnection1: TADOConnection;
    procedure FormCreate(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
    procedure createList();
  end;

var
  Form1: TForm1;

implementation

uses module;

{$R *.dfm}

procedure TForm1.createList();
var
  item: TListItem;

begin

  // Limpa o Conteudo Existente no ListView
  lvRecords.Clear;

  // Posicionamos no Primeiro Registro
  sqlCidades.Open;

  while not sqlCidades.Eof do
  begin

    // Adicionamos um Item ao ListView
    item := lvRecords.Items.Add;

    // Adicionamos dados a Coluna Login
    item.Caption := sqlCidades.FieldByName('codigo_cidade').Value;

    // Adicionamos a Coluna Nome do Usuario
    item.SubItems.Add(sqlCidades.FieldByName('nome').Value);

    // Adicionamos a coluna Nivel
    item.SubItems.Add(sqlCidades.FieldByName('estado').Value);

    // Adicionamos a coluna Nivel
    item.SubItems.Add(sqlCidades.FieldByName('cep_inicial').Value);

    // Adicionamos a coluna Nivel
    item.SubItems.Add(sqlCidades.FieldByName('cep_final').Value);

    // Mudamos para o proximo registro
    sqlCidades.Next;

  end;

end;

procedure TForm1.FormCreate(Sender: TObject);
begin

  createList();

end;

end.
